{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: gcc 활성 파일 디버그",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${fileDirname}/a.out",
            "program": "${workspaceFolder}/webserv",
            "args": ["./configuration/webserv.conf"],
            "stopAtEntry": false,
            // "cwd": "${fileDirname}",
            "cwd": "${workspaceFolder}/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable multi-threading",
                    "text": "set print thread-events on",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true,
                "trace": true,
                "traceResponse": true
            }
        }
    ]
}
